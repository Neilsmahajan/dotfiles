[user]
	email = neil.mahajan@netapp.com
	name = Mahajan, Neil

# Machine-local overrides (git-ignored). Create ~/.gitconfig.local to override
# any values above â€” e.g. a personal email on a non-work machine:
#
#   [user]
#       email = neil@personal.com
#
[include]
	path = ~/.gitconfig.local

[core]
	editor = nvim
	autocrlf = false

[color]
	ui = auto

[alias]
	lg = log --graph --abbrev-commit --decorate --date=relative --all
	lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset)%C(dim white)- %an%C(reset)' --all
	last = log -1 HEAD
	co = checkout
	cp = cherry-pick
	# switch to previous branch
	pb = checkout -

[push]
	default = current

[rebase]
	autosquash = true

[pager]
	branch = false
